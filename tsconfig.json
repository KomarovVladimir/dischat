{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "dist",
        "lib": ["dom", "dom.iterable", "esnext"],
        "target": "ES5",
        "sourceMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "isolatedModules": false,
        "paths": {
            "constants": ["common/constants"],
            "types": ["common/types"],
            "hooks": ["common/hooks"],
            "lib": ["common/lib"]
        },
        "jsx": "react-jsx",
        "types": ["webpack-env", "react", "jest", "@testing-library/jest-dom"]
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules"]
}
